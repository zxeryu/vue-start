{
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"],
      "@el/*": ["src-el/*"],
      "@cheng/*": ["src-cheng/*"],
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "noEmitOnError": false,
    "emitDeclarationOnly": true,
    "outDir": ".tmp"
  },
  "include": ["@vue-start/**/*", "@vue-start-dev/**/*", "src/**/*", "src-el/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
